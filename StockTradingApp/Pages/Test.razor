<style>
    .table-net {
        border-radius: 10px;
        padding: 10px;
        width: 60%;
        background-color: #EAECF1;
        text-align: center;
        margin: auto;
    }

    .line-chart {
        width: 45%;
    }
</style>


<div class=" row">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-header">
                Bar Chart
            </div>
            <div class="card-body">
                <canvas class="my-4 h-25" id="myChart1"></canvas>
            </div>
        </div>
    </div>
</div>

<table class="table table-hover table-striped table-net">
    <thead>
        <tr>
            <th>Day</th>
            <th>Principal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prin in principalTest)
        {
            <tr>
                <td>@prin.day</td>
                <td>@prin.principal</td>
            </tr>
        }
    </tbody>
</table>


